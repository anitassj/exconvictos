<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('commons/head.ejs'); %>
</head>
<body>
    <%- include('commons/header.ejs'); %>
    
    <div class="contenedor-datos-con-tabs">
        
        <div class="tabs-con-acciones">
            <div class="tabs">
                <a href="/perfil_usuario" id="datos-personales-tab" class="tabActivo">Datos personales</a>
                <a href="javascript:void(0)" id="vehiculos-tab" class="tabDesactivado">Vehículos</a>
            </div>
            <div class="acciones">
                <button id="emitir-poliza" class="activo configBotones" onclick="window.location.href='/poliza'">
                    <span class="material-symbols-outlined botones">download_for_offline</span>Emitir póliza
                </button>
                <button id="eliminar-cliente" class="oculto configBotones cancelar">
                    <span class="material-symbols-outlined botones">delete</span>Eliminar Cliente
                </button>
                <button id="editar-perfil" class="activo configBotones" onclick="editarPerfil()">
                    <span class="material-symbols-outlined botones">edit</span>Editar perfil
                </button>
            </div>
        </div>
        <div class="botones-edicion oculto">
            <button id="guardar" class="configBotones" onclick="guardarCambios()">
                <span class="material-symbols-outlined botones">check</span>Guardar
            </button>
            <button id="cancelar" class="configBotones cancelar" onclick="cancelarEdicion()">
                <span class="material-symbols-outlined botones">close</span>Cancelar
            </button>
            <button id="agregar-vehiculo" class="configBotones" onclick="agregarVehiculo()">
                <span class="material-symbols-outlined botones">add_circle</span>Agregar vehículo
            </button>
        </div>
        

        <div class="contenedor-datos">
            <div class="vehiculos-asegurados">
                <h2>Vehículos Asegurados</h2>
                <div class="vehiculo">
                    <div class="info-grid">
                        <div class="colum1">
                            <label for="tipo_vehiculo">Tipo de Vehículo </label>
                            <select id="tipo_vehiculo" disabled>
                                <option value="" disabled selected>Selecciona un tipo de vehículo</option>
                                <option value="auto">Auto</option>
                                <option value="moto">Moto</option>
                            </select>
                            <label for="patente">Patente </label>
                            <input type="text" id="patente" disabled>
                            <label for="anio">Año </label>
                            <input type="number" id="anio"  disabled>
                            <label for="vigencia_desde">Vigencia Desde </label>
                            <input type="date" id="vigencia_desde" disabled>
                            <label for="vigencia_hasta">Vigencia Hasta </label>
                            <input type="date" id="vigencia_hasta" disabled>
                        </div>
    
                        <div class="colum2">
                            <label>Fotos </label>
                            <button onclick="verFotos('vehiculo1')" class="ver-fotos configBotones"><span class="material-symbols-outlined botones">visibility</span>Ver</button>
                            <label for="tipo_seguro">Tipo de Seguro </label>
                            <select id="tipo_seguro" disabled>
                                <option value="" disabled selected>Selecciona un plan</option>
                                <option value="basico">Básico</option>
                                <option value="intermedio">Intermedio</option>
                                <option value="premiun">Premiun</option>
                            </select>
                            <label for="premio_total">Premio Total (en pesos) </label>
                            <input type="number" id="premio_total" disabled>
                            <label for="suma_asegurada">Suma Asegurada </label>
                            <input type="number" id="suma_asegurada" disabled>
                            <label for="uso_vehiculo">Uso del Vehículo </label>
                            <select id="uso_vehiculo" disabled>
                                <option value="" disabled selected>Selecciona un tipo de uso</option>
                                <option value="particular">Particular</option>
                                <option value="profesional">Profesional</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/public/js/panel.js"></script>
    <script src="/public/js/perfil_usuario.js"></script>
    <script src="/public/js/vehiculo.js"></script>
</body>
</html>
