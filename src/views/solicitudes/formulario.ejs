<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalles del Solicitud</title>
    <link rel="stylesheet" href="/public/css/panel.css">
    <link rel="stylesheet" href="/public/css/perfil_usuario.css">
    <!-- Fuentes y Material Icons -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=New+Amsterdam&family=Urbanist:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <style>
        .info-container {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }
        .info-column {
            flex: 1;
            margin-right: 20px;
        }
        .info-column:last-child {
            margin-right: 0;
        }
        label {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <header>
        <button class="menu configBotones"><span class="material-symbols-outlined headIcon">menu</span></button>
        <button class="usuario configBotones"><span class="material-symbols-outlined headIcon">account_circle</span>Tú</button>
        
        <div class="menu-usuario">
            <a href="/cerrar-sesion" class="btn btn-primary" id="cerrar-sesion">Cerrar sesión</a>
        </div>
    </header>

    <div class="contenedor-datos">
        <div class="logos"><span class="material-symbols-outlined">question_mark</span></div>
        <h2>Detalles del Solicitud</h2>
        
        <div class="info-grid">
            <div class="colum1">
                <label for="tipo_vehiculo">Tipo de Vehículo</label>
                <input type="text" id="tipo_vehiculo" value="<%= solicitud.tipo %>" disabled>

                <label for="patente">Patente</label>
                <input type="text" id="patente" value="<%= solicitud.patente %>" disabled>

                <label for="marca">Marca</label>
                <input type="text" id="marca" value="<%= solicitud.id_marca %>" disabled>

                <label for="modelo">Modelo</label>
                <input type="text" id="modelo" value="<%= solicitud.id_modelo %>" disabled>

                <label for="anio">Año</label>
                <input type="number" id="anio" value="<%= solicitud.anio %>" disabled>
            </div>

            <div class="colum2">
                <label for="nombre">Nombre</label>
                <input type="text" id="nombre" value="<%= solicitud.nombre %>" disabled>

                <label for="apellido">Apellido</label>
                <input type="text" id="apellido" value="<%= solicitud.apellido %>" disabled>

                <label for="email">Email</label>
                <input type="email" id="email" value="<%= solicitud.email %>" disabled>

                <label for="celular">Celular</label>
                <input type="text" id="celular" value="<%= solicitud.celular %>" disabled>
            </div>
        </div>

        <button class="activo configBotones" onclick="window.history.back()">
            <span class="material-symbols-outlined botones">arrow_back</span>Volver
        </button>
        <button id="enviarCotizacion" class="activo configBotones" onclick="enviarCotizacion()">
            <span class="material-symbols-outlined botones">send</span>Enviar Cotización
        </button>
        <button id="archivar" class="activo configBotones">
            <span class="material-symbols-outlined botones">archive</span>Archivar
        </button>
        <button id="eliminar" class="activo configBotones peligro">
            <span class="material-symbols-outlined botones">delete</span>Eliminar
        </button>
    </div>

    <!-- JS -->
    <script src="/public/js/panel.js"></script>
    <script src="/public/js/solicitudes.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</body>
</html>
