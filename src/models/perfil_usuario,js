const db = require('../config/db');

const PerfilUsuario = {
    obtenerPorId: (id) => {
      return new Promise((resolve, reject) => {
        db.query('SELECT * FROM perfil_usuario WHERE idPerfilUsuario = ?', [id], (error, resultados) => {
          if (error) reject(error);
          resolve(resultados[0]); // retorna solo el primer resultado pque se espera un solo usuario
        });
      });
    },
    

  };
  
  module.exports = PerfilUsuario;